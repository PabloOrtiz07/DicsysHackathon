@model List<WebApplicationHackathon.Models.Ingresante>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<div class="card">
    <div class="card-header"
        <h5>Lista de ingresantes total</h5>
    </div>
    <div class="card-body"
        <a class="btn btn-success btn-sm" asp-action="Ingresante detalles" ></a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Dni</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Dni</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
